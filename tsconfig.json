{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
