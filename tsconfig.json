{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES6", "DOM"],
        "allowJs": true,
        "module": "ESNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": false
    },
    "include": ["src/**/**/*.ts"],
    "exclude": ["node_modules"]
}
