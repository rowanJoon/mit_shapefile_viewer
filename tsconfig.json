{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom"],
        "allowJs": true,
        "module": "es6",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
